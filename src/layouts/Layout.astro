---
// Supports weights 100-900
import NoiseBackgroud from "@/components/NoiseBackgroud.astro";
import "@fontsource-variable/jost";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Evento de boxeo entre streamers y creadores de contenido de Ibai Llanos"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color " content="#ffffff" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://lavelada.es" />
    <title>{title}</title>
  </head>
  <body>
    <NoiseBackgroud />
    <div class="max-w-6xl px-2 lg:px-10 mx-auto pt-16">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family:
      "Jost Variable" system-ui,
      sans-serif;
    background: #ddd;
  }
</style>
