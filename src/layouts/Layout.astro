---
// Supports weights 100-900
import "@fontsource-variable/jost";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pagina web creada con fines educativos" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="max-w-6xl px-10 mx-auto pt-16">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family:
      "Jost Variable" system-ui,
      sans-serif;
    background: #ddd;
  }
</style>
