<section
  class="mt-32 mx-auto flex flex-col justify-center items-center text-center text-primary"
>
  <h2 class="uppercase text-5xl font-semibold">
    4 de marzo<span aria-hidden="true" class="hidden md:inline mx-1">•</span>
    <br aria-hidden class="block md:hidden" />
    <span>
      <script is:inline>
        const END_DATE = 1709575200000;
        const d = new Date(END_DATE);

        const date = d.toLocaleTimeString("es", {
          hour: "2-digit",
          minute: "2-digit",
        });
        // get current timezone

        const tzOffset = d.getTimezoneOffset() / 60;
        const diff = Math.round(tzOffset * -1.5);
        const gmt = diff > 0 ? `GMT+${diff}` : `GMT-${Math.abs(diff)}`;

        const TZ_DICTIONARY = {
          "GMT+1": "CET",
        };

        const tz = TZ_DICTIONARY[gmt] || gmt;

        const selfScript = document.currentScript;
        selfScript.parentNode.innerHTML = `${date}H ${tz}`;
      </script>
    </span>
  </h2>

  <h3 class="uppercase text-2xl font-medium flex flex-col max-w-sm mt-6">
    <span>Evento de Presentación</span>
    <span>Teatro Victoria (Barcelona)</span>
  </h3>

  <a
    class={`
  border-primary border-2 font-medium px-4 py-1 text-lg uppercase hover:bg-secondary hover:scale-110 transition mt-8
  `}
    href="#"
    target="_blank"
    rel="noopener noreferrer"
  >
    Entradas agotadas
  </a>
</section>
